<p id="notice"><%= notice %></p>

<h1>Recommendations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Game entry</th>
      <th>Owned</th>
      <th>Wanted</th>
      <th>Hated</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.user_id %></td>
        <td><%= recommendation.game_entry_id %></td>
        <td><%= recommendation.owned %></td>
        <td><%= recommendation.wanted %></td>
        <td><%= recommendation.hated %></td>
        <td><%= recommendation.platform %></td>
        <td><%= link_to 'Show', recommendation %></td>
        <td><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
        <td><%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_recommendation_path %>
