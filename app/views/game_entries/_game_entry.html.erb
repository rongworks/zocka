<div class="columns game_entry">
  <div class="column is-one-fifth">
    <span class="title"><%= game_entry.score  %></span>
    <%= icon_link('thumbs-up', game_entry_upvote_path(game_entry), {method: :post}) %>
    <%= icon_link('thumbs-down', game_entry_downvote_path(game_entry), {method: :post}) %>
  </div>
  <div class="column">
    <p class="title"><%= game_entry.name %> <%= icon_link('search', game_entry.game_link) %> </p>
    <p></p>
    <p><%= game_entry.description %></p>
  </div>
  <div class="column">
    <p>
      <%= link_to 'I have it', new_recommendation_path(recommendation: {game_entry_id: game_entry.id, user_id: current_user.id, owned: true}) %>
    </p>
    <p>
      (<%= game_entry.owner_count %> user have it)
    </p>
    <p>
      <%= link_to 'I want it', new_recommendation_path(recommendation: {game_entry_id: game_entry.id, user_id: current_user.id, wanted: true}) %>
    </p>
    <p>
      (<%= game_entry.wishlist_count %> user want it)
    </p>
  </div>
  <div class="column">
    <span><%= link_to 'Edit', edit_game_entry_path(game_entry) %></span>
    <span><%= link_to 'Destroy', game_entry, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </div>
</div>