<div>
  <h2>Add a User</h2>
  <%= simple_form_for :add_user, url: add_user_group_url(id: group.id) do |f| %>
    <%= select_tag "user_id", options_from_collection_for_select(User.select(:id, :username), "id", "username"), name: 'user_id' %>
    <%= f.button :submit, class: 'add_user' %>
  <% end %>
</div>
